<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff">

    <include
        android:id="@+id/toolset"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/delayRelative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="63dp"
                    android:background="@color/accent"
                    android:padding="8dp"
                    android:text="Delay"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#000000"
                    android:textSize="30dp" />

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView"
                    android:progress="10"
                    android:theme="@style/AppTheme" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/paramNorm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/delayRelative"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:background="@color/accent"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Normal"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#000000"
                        android:textSize="30dp" />

                    <EditText
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:editable="true"
                        android:inputType="numberDecimal"
                        android:text="40"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#000000"
                        android:textIsSelectable="false"
                        android:textSize="30sp" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/paramWarn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/paramNorm"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:background="@color/accent"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Warn"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#000000"
                        android:textSize="30dp" />

                    <EditText
                        android:id="@+id/editText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="numberDecimal"
                        android:text="80"
                        android:textColor="#000000"
                        android:textSize="30sp" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/paramOver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/paramWarn"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:background="@color/accent"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Overcrowd"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#000000"
                        android:textSize="30dp" />

                    <EditText
                        android:id="@+id/editText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="numberDecimal"
                        android:text="100"
                        android:textColor="#000000"
                        android:textSize="30sp" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/areaPremises"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/paramOver"
                android:layout_centerHorizontal="true"
                android:background="@color/accent"
                android:padding="8dp">

                <TextView
                    android:id="@+id/areaText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Area Of Premises"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/bright_foreground_inverse_material_dark"
                    android:textSize="30dp" />

                <EditText
                    android:id="@+id/areaVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/areaText"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:focusable="true"
                    android:inputType="numberDecimal"
                    android:text="20"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/areaText"
                    android:layout_toRightOf="@+id/areaVal"
                    android:text="sq. metre"
                    android:textColor="@color/bright_foreground_inverse_material_dark"
                    android:textSize="30sp" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
